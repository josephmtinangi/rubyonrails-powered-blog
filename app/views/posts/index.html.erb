<div class="posts index">
  <% if @posts.exists? %>
      <% @posts.each_slice(2) do |post| %>
          <div class="row">
            <% post.each do |post| %>
                <div class="col-md-6">
                  <div class="post">
                    <div class="thumbnail">
                      <%= image_tag post.image.url, class: 'img-responsive' %>
                      <div class="caption">
                        <h3><%= post.title %></h3>
                        <p>
                          <small>Posted by <%= post.user.name %>
                            on <%= post.created_at.to_time.strftime('%B %e at %l:%M %p') %></small>
                        </p>
                        <p>
                          <%= raw post.body.truncate(200) %>
                        </p>
                        <p>
                          <%= link_to 'Read more', post_path(post), class: 'btn btn-primary' %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
      <% end %>

  <% else %>
      <div class="jumbotron">
        <div class="container text-center">
          <h3>No Posts in this category yet</h3>
        </div>
      </div>
  <% end %>
</div>