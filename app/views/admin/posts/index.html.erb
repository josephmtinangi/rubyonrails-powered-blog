<div class="page-header">
  <h1>Manage Posts <%= link_to 'New', new_admin_post_path, class: 'btn btn-success pull-right' %></h1>
</div>

<% if @posts.exists? %>

    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Created</th>
          <th>Updated</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.category.name %></td>
              <td><%= post.created_at %></td>
              <td><%= post.updated_at %></td>
              <td>
                <%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-primary' %>
                <%= link_to 'Delete', admin_post_path(post), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>

<% else %>

    <p>There are no posts.</p>

<% end %>